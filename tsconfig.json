{
  "compilerOptions": {
    "lib": ["ES2023"],
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "resolveJsonModule": true,
    "incremental": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
